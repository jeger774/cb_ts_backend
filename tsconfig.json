{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "rootDirs": ["src/"]
  },
  "lib": ["es2015"],
  "include": ["./src/**/*.ts"],
  "exclude": ["dist"],
}